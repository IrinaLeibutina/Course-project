<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"

    tools:context="com.example.irina.light.MainActivity">


    <ToggleButton
        android:id="@+id/toggleRedLed"
        android:layout_width="100dp"
        android:layout_height="218dp"
        android:background="#FF0000"

        android:textOn="ON"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="310dp"
        android:textOff="OFF"
        />

    <ToggleButton
        android:id="@+id/toggleYellowLed"
        android:layout_width="100dp"
        android:layout_height="217dp"
        android:background="#FFFF00"

        android:textSize="30dp"
        android:textOn="ON"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="310dp"
        android:textOff="OFF"/>

    <ToggleButton
        android:id="@+id/toggleGreenLed"
        android:layout_width="100dp"
        android:layout_height="218dp"
        android:background="#00FF00"

        android:textSize="30dp"
        android:textOn="ON"
        android:textOff="OFF"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="310dp"
   />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@drawable/clock"
        android:onClick="Click"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/toggleGreenLed"
        android:layout_marginEnd="21dp" />



    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toggleButton"

        android:layout_alignStart="@+id/toggleRedLed"
        android:layout_alignEnd="@+id/toggleGreenLed"
        android:background="#000000"
        android:textOff="OFF"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textOn="ON"
        android:layout_marginTop="245dp"

        />

</RelativeLayout>






